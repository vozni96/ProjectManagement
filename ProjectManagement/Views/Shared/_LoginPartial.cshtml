@using Microsoft.AspNetCore.Identity
@using ProjectManagement.Infrastructure
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
    { 
        <ul class="right hide-on-med-and-down">
            <li>
                <form asp-controller="User" asp-action="SignOut" method="post">
                    <button type="submit" class="btn-flat white-text" style="margin-right: 10px">Çıkış</button>
                </form>
            </li>
        </ul>
    }
    else
    {
        <ul class="right hide-on-med-and-down">
            <li>
                <a class="btn-flat white-text" asp-action="Register" asp-controller="User">Kaydol</a>
            </li>
            <li>
                <a class="btn-flat white-text" asp-action="Login" asp-controller="User">Giriş</a>
            </li>
        </ul>
    }